{
  "manifest_version": 3,
  "name": "NavAI",
  "version": "1.0.0",
  "description": "AI navigation assistant — guides you step-by-step through any website",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel",
    "webNavigation"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "ui/sidepanel.html"
  },
  "action": {
    "default_title": "NavAI — Click to open navigation assistant"
  }
}
